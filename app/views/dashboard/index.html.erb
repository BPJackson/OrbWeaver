<html>
	<head>
		<title>OrbWeaver</title>
		<meta http-equiv="content-type" content="text/html; charset=utf-8" />
		<meta name="description" content="" />
		<meta name="keywords" content="" />
		<script src="init.js"></script>
		<noscript>
		</noscript>
	</head>
	<body>

		<!-- Header -->
			<section id="header">
				<header class="major">
					<h1>Orbweaver</h1>
					<p>Your concert planning resource.</p>
				</header>

			</section>

		<!-- One -->
			<section id="one" class="main special">
				<div class="container">
					<span class="image fit primary"><img src="pic01.jpg" alt="" /></span>
					<div class="content">
						<header class="major">
							<h2>How</h2>
						</header>
						<p>OrbWeaver generates a playlist in your Spotify account for concerts that are going on sale in the next week. Not only will you be in the fold on current music, you'll never miss out on the opportunity to get tickets at face value.</p>
					</div>
					<%= link_to 'Generate Playlist', '/auth/spotify', class: "button special scrolly" %>
					<a href="#two" class="goto-next scrolly">Next</a>
				</div>
			</section>

		<!-- Two -->
			<section id="two" class="main special">
				<div class="container">
					<span class="image fit primary"><%= image_tag("pic02.jpg") %></span>
					<div class="content">
							<h2>  <%=  %> </h2>
						<% if @spotify_user %>
						<header class="major">
						<p><h2>Welcome, <%= @spotify_user.display_name %>!</h2></p>
						</header>
						<p>The Orbweaver playlist has been added to your spotify account.</p>
						<% end %>
						<ul class="icons-grid">
							<li>
								<span class="icon major fa-camera-retro"></span>
								<h3>Magna Etiam</h3>
							</li>
							<li>
								<span class="icon major fa-pencil"></span>
								<h3>Lorem Ipsum</h3>
							</li>
							<li>
								<span class="icon major fa-code"></span>
								<h3>Nulla Tempus</h3>
							</li>
							<li>
								<span class="icon major fa-coffee"></span>
								<h3>Sed Feugiat</h3>
							</li>
						</ul>
					</div>
					<a href="#three" class="goto-next scrolly">Next</a>
				</div>
			</section>

		<!-- Three -->
			<section id="three" class="main special">
				<div class="container">
					<span class="image fit primary"><%= image_tag("pic03.jpg") %> alt="" /></span>
					<div class="content">
						<header class="major">
							<h2>Artists</h2>
						</header>
						<p><% @events.each do |band| %> </p>
							<%= band %>
							<% end %>
					</div>
					<a href="#footer" class="goto-next scrolly">Next</a>
				</div>
			</section>


		<!-- Footer -->
			<section id="footer">
				<div class="container">
					<header class="major">
						<h2>Get in touch</h2>
					</header>
					<form method="post" action="#">
						<div class="row uniform">
							<div class="6u 12u$(xsmall)"><input type="text" name="name" id="name" placeholder="Name" /></div>
							<div class="6u$ 12u$(xsmall)"><input type="email" name="email" id="email" placeholder="Email" /></div>
							<div class="12u$"><textarea name="message" id="message" placeholder="Message" rows="4"></textarea></div>
							<div class="12u$">
								<ul class="actions">
									<li><input type="submit" value="Send Message" class="special" /></li>
								</ul>
							</div>
						</div>
					</form>
				</div>
				<footer>
					<ul class="icons">
						<li><a href="#" class="icon alt fa-twitter"><span class="label">Twitter</span></a></li>
						<li><a href="#" class="icon alt fa-facebook"><span class="label">Facebook</span></a></li>
						<li><a href="#" class="icon alt fa-instagram"><span class="label">Instagram</span></a></li>
						<li><a href="#" class="icon alt fa-dribbble"><span class="label">Dribbble</span></a></li>
						<li><a href="#" class="icon alt fa-envelope"><span class="label">Email</span></a></li>
					</ul>
					<ul class="copyright">
						<li>&copy; Untitled</li><li>Design: <a href="http://html5up.net">HTML5 UP</a></li><li>Demo Images: <a href="http://unsplash.com">Unsplash</a></li>
					</ul>
				</footer>
			</section>

	</body>
</html>
